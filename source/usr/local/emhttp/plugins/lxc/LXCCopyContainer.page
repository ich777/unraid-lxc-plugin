<script>
  //Don't execute commands again if page is refreshed
  if (window.history.replaceState) {
    window.history.replaceState(null, null, window.location.href);
  }

  //Create container box
  function createContainer(form) {
    var regex = /^([0-9A-F]{2}[:-]){5}([0-9A-F]{2})$/;
    if (!regex.test(form.contMac.value)) {
      alert("Invalid MAC address");
      return false;
    }
    var name = form.contName.value;
    var autostart = form.contAutostart.checked;
    var mac = form.contMac.value;
    openBox("/usr/local/emhttp/plugins/lxc/include/create_container.sh&arg1=<?php echo $default_path; ?>&arg2=" + mac + "&arg3=" + name + "&arg4=null&arg5=null&arg6=" + autostart + "&arg7=copy&arg8=<?= $container ?>&arg9=null", "Create Container", 600, 800, true);
    return false;
  }
</script>

